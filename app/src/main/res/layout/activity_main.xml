<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#00B1AEAE">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="#444242">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp" android:background="#444242">

            <Button
                    android:text="RESET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/resetButton"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="40dp" android:textSize="30dp"
                    android:background="#444242" android:textColor="#FFFFFF"/>
            <Button
                    android:text="CONT."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/continueButton"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="40dp" android:textSize="30dp"
                    android:background="#444242" android:textColor="#FFFFFF" android:visibility="invisible"
                    android:onClick="continueButtonClicked"/>
            <TextView
                    android:text="Player1: 0"
                    android:freezesText="true"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/textViewPlayer1" android:layout_alignParentTop="true"
                    android:layout_marginTop="50dp" android:layout_alignStart="@+id/textViewPlayer2"
                    android:textSize="30dp" android:background="#444242" android:textColor="#FFFFFF"/>
            <TextView
                    android:text="Player2: 0"
                    android:freezesText="true"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/textViewPlayer2"
                    android:layout_alignParentStart="true" android:layout_marginStart="40dp"
                    android:layout_alignParentBottom="true" android:layout_marginBottom="50dp" android:textSize="30dp"
                    android:background="#444242" android:textColor="#FFFFFF"/>
        </RelativeLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1" android:background="#444242">
            <Button
                    android:freezesText="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button00" android:layout_weight="1"
                    android:textSize="60sp" android:onClick="xoButtonClicked"
                    android:background="@drawable/button_border" android:textColor="#FFFFFF"/>
            <Button
                    android:freezesText="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button01" android:layout_weight="1"
                    android:textSize="60sp" android:onClick="xoButtonClicked"
                    android:background="@drawable/button_border" android:textColor="#FFFFFF"/>
            <Button
                    android:freezesText="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button02" android:layout_weight="1"
                    android:textSize="60sp" android:onClick="xoButtonClicked"
                    android:background="@drawable/button_border" android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1" android:background="#444242">
            <Button
                    android:freezesText="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button10" android:layout_weight="1"
                    android:textSize="60sp" android:onClick="xoButtonClicked"
                    android:background="@drawable/button_border" android:textColor="#FFFFFF"/>
            <Button
                    android:freezesText="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button11" android:layout_weight="1"
                    android:textSize="60sp" android:onClick="xoButtonClicked"
                    android:background="@drawable/button_border" android:textColor="#FFFFFF"/>
            <Button
                    android:freezesText="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button12" android:layout_weight="1"
                    android:textSize="60sp" android:onClick="xoButtonClicked"
                    android:background="@drawable/button_border" android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1" android:background="#444242">
            <Button
                    android:freezesText="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button20" android:layout_weight="1"
                    android:textSize="60sp" android:onClick="xoButtonClicked"
                    android:background="@drawable/button_border" android:textColor="#FFFFFF"/>
            <Button
                    android:freezesText="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button21" android:layout_weight="1"
                    android:textSize="60sp" android:onClick="xoButtonClicked"
                    android:background="@drawable/button_border" android:textColor="#FFFFFF"/>
            <Button
                    android:freezesText="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button22" android:layout_weight="1"
                    android:textSize="60sp" android:onClick="xoButtonClicked"
                    android:background="@drawable/button_border" android:textColor="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>